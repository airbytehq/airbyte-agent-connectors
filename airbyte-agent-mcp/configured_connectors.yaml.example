# Example connector configuration
# Copy to configured_connectors.yaml and customize

# Connector definitions
# LOCAL connectors can be loaded from:
# - A local file path (path field) - no version pinning supported
# - The Airbyte registry (connector_name field) - supports optional version pinning
connectors:
  # LOCAL connector with file path
  - id: my_api
    type: local
    path: ./connectors/my-api/connector.yaml
    description: "My custom API connector"
    secrets:
      token: MY_API_KEY

  # LOCAL connector from registry (latest version)
  - id: stripe
    type: local
    connector_name: stripe
    description: "Stripe connector from registry"
    secrets:
      token: STRIPE_API_KEY

  # LOCAL connector from registry with version pinning
  - id: salesforce
    type: local
    connector_name: salesforce
    version: 1.2.0
    description: "Salesforce connector pinned to v1.2.0"
    secrets:
      client_id: SALESFORCE_CLIENT_ID
      client_secret: SALESFORCE_CLIENT_SECRET
